<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scroll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout android:id="@+id/main_content"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <include layout="@layout/airport_title_layout" />
        <LinearLayout
                android:orientation="vertical"
                android:paddingStart="@dimen/padding_left"
                android:paddingEnd="@dimen/padding_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView android:id="@+id/detail_comm_label"
                    style="@style/TextLabel"
                    android:paddingBottom="@dimen/label_padding"
                    android:layout_marginTop="@dimen/section_margin"
                    android:text="@string/communications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            <LinearLayout android:id="@+id/detail_comm_layout"
                    style="@style/DetailPanel"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            <TextView android:id="@+id/detail_rwy_label"
                    style="@style/TextLabel"
                    android:paddingBottom="@dimen/label_padding"
                    android:layout_marginTop="@dimen/section_margin"
                    android:text="@string/runways"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            <LinearLayout android:id="@+id/detail_rwy_layout"
                    style="@style/DetailPanel"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            <TextView android:id="@+id/detail_heli_label"
                    style="@style/TextLabel"
                    android:paddingBottom="@dimen/label_padding"
                    android:layout_marginTop="@dimen/section_margin"
                    android:text="@string/helipads"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            <LinearLayout android:id="@+id/detail_heli_layout"
                    style="@style/DetailPanel"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            <TextView android:id="@+id/detail_awos_label"
                    style="@style/TextLabel"
                    android:paddingBottom="@dimen/label_padding"
                    android:layout_marginTop="@dimen/section_margin"
                    android:text="@string/weather_stations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            <LinearLayout android:id="@+id/detail_awos_layout"
                    style="@style/DetailPanel"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            <TextView android:id="@+id/detail_remarks_label"
                    style="@style/TextLabel"
                    android:paddingBottom="@dimen/label_padding"
                    android:layout_marginTop="@dimen/section_margin"
                    android:text="@string/remarks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            <LinearLayout android:id="@+id/detail_remarks_layout"
                    style="@style/DetailPanel"
                    android:orientation="vertical"
                    android:padding="@dimen/item_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            <TextView android:id="@+id/detail_home_label"
                    style="@style/TextLabel"
                    android:paddingBottom="@dimen/label_padding"
                    android:layout_marginTop="@dimen/section_margin"
                    android:text="@string/home_airport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            <LinearLayout android:id="@+id/detail_home_layout"
                    style="@style/DetailPanel"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            <TextView android:id="@+id/detail_nearby_label"
                    style="@style/TextLabel"
                    android:paddingBottom="@dimen/label_padding"
                    android:layout_marginTop="@dimen/section_margin"
                    android:text="@string/nearby_facilities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            <LinearLayout android:id="@+id/detail_nearby_layout"
                    style="@style/DetailPanel"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            <TextView android:id="@+id/detail_notam_faa_label"
                    style="@style/TextLabel"
                    android:paddingBottom="@dimen/label_padding"
                    android:layout_marginTop="@dimen/section_margin"
                    android:text="@string/notam_tfr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            <LinearLayout android:id="@+id/detail_notam_faa_layout"
                    style="@style/DetailPanel"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            <TextView android:id="@+id/detail_aeronav_label"
                    style="@style/TextLabel"
                    android:paddingBottom="@dimen/label_padding"
                    android:layout_marginTop="@dimen/section_margin"
                    android:text="@string/aeronav_products"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            <LinearLayout android:id="@+id/detail_aeronav_layout"
                    style="@style/DetailPanel"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            <TextView android:id="@+id/detail_charts_label"
                    style="@style/TextLabel"
                    android:paddingBottom="@dimen/label_padding"
                    android:layout_marginTop="@dimen/section_margin"
                    android:text="@string/charts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            <LinearLayout android:id="@+id/detail_charts_layout"
                    style="@style/DetailPanel"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            <TextView android:id="@+id/detail_operations_label"
                    style="@style/TextLabel"
                    android:paddingBottom="@dimen/label_padding"
                    android:layout_marginTop="@dimen/section_margin"
                    android:text="@string/airport_operations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            <LinearLayout android:id="@+id/detail_operations_layout"
                    style="@style/DetailPanel"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            <TextView android:id="@+id/detail_services_label"
                    style="@style/TextLabel"
                    android:paddingBottom="@dimen/label_padding"
                    android:layout_marginTop="@dimen/section_margin"
                    android:text="@string/airport_services"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            <LinearLayout android:id="@+id/detail_services_layout"
                    style="@style/DetailPanel"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            <TextView android:id="@+id/detail_other_label"
                    style="@style/TextLabel"
                    android:paddingBottom="@dimen/label_padding"
                    android:layout_marginTop="@dimen/section_margin"
                    android:text="@string/other_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            <LinearLayout android:id="@+id/detail_other_layout"
                    style="@style/DetailPanel"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView android:id="@+id/effective_date"
                style="@style/TextSmall.Light"
                android:padding="@dimen/item_padding"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
