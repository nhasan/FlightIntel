<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scroll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout android:id="@+id/main_content"
            android:orientation="vertical"
            android:padding="@dimen/item_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView android:id="@+id/wx_map_type_label"
                style="@style/TextLabel"
                android:text="@string/select_type"
                android:textColor="?colorPrimary"
                android:visibility="gone"
                android:paddingTop="@dimen/item_padding"
                android:paddingBottom="@dimen/label_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        <LinearLayout android:id="@+id/wx_map_type_layout"
                android:visibility="gone"
                android:padding="@dimen/item_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/wx_map_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <TextView android:id="@+id/wx_map_label"
                style="@style/TextLabel"
                android:textColor="?colorPrimary"
                android:paddingTop="@dimen/item_padding"
                android:paddingBottom="@dimen/label_padding"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        <LinearLayout android:id="@+id/wx_map_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        <TextView android:id="@+id/wx_help_text"
                style="@style/TextSmaller.Light"
                android:visibility="gone"
                android:layout_marginTop="@dimen/section_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
