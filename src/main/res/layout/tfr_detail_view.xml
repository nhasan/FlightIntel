<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scroll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            android:id="@+id/main_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/padding_left"
            android:paddingEnd="@dimen/padding_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button android:id="@+id/btnViewGraphic"
                style="@style/FlatButton"
                android:text="@string/view_graphic"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/section_margin"
                android:layout_marginBottom="@dimen/section_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <TextView android:id="@+id/tfr_header_label"
                  style="@style/TextLabel"
                  android:paddingBottom="@dimen/label_padding"
                  android:text="@string/tfr_details"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" />
        <LinearLayout android:id="@+id/tfr_header_layout"
                android:background="@drawable/rounded_rectangle"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        <LinearLayout android:id="@+id/tfr_text_layout"
                android:background="@drawable/rounded_rectangle"
                android:layout_marginTop="@dimen/section_margin"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        </LinearLayout>
        <LinearLayout android:id="@+id/tfr_time_layout"
                android:background="@drawable/rounded_rectangle"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/section_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        <TextView android:id="@+id/tfr_warning_text"
                style="@style/TextSmall.Light"
                android:gravity="center"
                android:textStyle="italic"
                android:paddingTop="@dimen/item_padding"
                android:paddingBottom="@dimen/item_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
