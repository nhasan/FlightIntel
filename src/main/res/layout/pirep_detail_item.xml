<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    <TextView android:id="@+id/pirep_title"
            style="@style/TextLabel"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/section_margin"
            android:paddingBottom="@dimen/label_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <TextView android:id="@+id/pirep_title_extra"
            style="@style/TextSmall"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/pirep_title"
            android:layout_alignBaseline="@id/pirep_title"
            android:layout_marginTop="@dimen/section_margin"
            android:paddingBottom="@dimen/label_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <TextView android:id="@+id/wx_raw_pirep"
            style="@style/TextSmall"
            android:background="@drawable/rounded_rectangle"
            android:padding="@dimen/item_padding"
            android:layout_below="@id/pirep_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    <LinearLayout android:id="@+id/pirep_details"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/section_margin"
            android:background="@drawable/rounded_rectangle"
            android:layout_below="@id/wx_raw_pirep"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
</RelativeLayout>
