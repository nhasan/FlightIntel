<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:paddingStart="@dimen/padding_left"
        android:paddingEnd="@dimen/padding_right"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    <TextView android:id="@+id/wx_station_phone"
            style="@style/TextSmaller"
            android:singleLine="true"
            android:paddingStart="0sp"
            android:paddingEnd="@dimen/padding_right"
            android:paddingTop="@dimen/label_padding"
            android:paddingBottom="@dimen/label_padding"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <TextView android:id="@+id/wx_station_freq"
            style="@style/TextSmaller"
            android:singleLine="true"
            android:drawablePadding="2dp"
            android:paddingStart="0sp"
            android:paddingEnd="@dimen/padding_right"
            android:paddingTop="@dimen/label_padding"
            android:paddingBottom="@dimen/label_padding"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <TextView android:id="@+id/wx_station_freq2"
            style="@style/TextSmaller"
            android:singleLine="true"
            android:drawablePadding="2dp"
            android:paddingStart="0sp"
            android:paddingEnd="@dimen/padding_right"
            android:paddingTop="@dimen/label_padding"
            android:paddingBottom="@dimen/label_padding"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <TextView android:id="@+id/wx_age"
            style="@style/TextSmaller"
            android:paddingTop="@dimen/label_padding"
            android:paddingBottom="@dimen/label_padding"
            android:gravity="end"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
</LinearLayout>
