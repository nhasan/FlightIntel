<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:paddingStart="@dimen/padding_left"
        android:paddingTop="@dimen/padding_top"
        android:paddingEnd="@dimen/padding_right"
        android:paddingBottom="@dimen/padding_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView android:id="@+id/wx_station_id"
            style="@style/TextSmall.Bold"
            android:gravity="end"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/item_spacing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <TextView android:id="@+id/wx_station_name"
            style="@style/TextSmall.Bold"
            android:layout_toStartOf="@id/wx_station_id"
            android:layout_alignParentStart="true"
            android:gravity="start"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <TextView android:id="@+id/wx_station_freq"
            style="@style/TextSmaller.Light"
            android:gravity="end"
            android:layout_below="@id/wx_station_id"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/item_spacing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <TextView android:id="@+id/wx_station_info"
            style="@style/TextSmaller.Light"
            android:layout_below="@id/wx_station_name"
            android:layout_toStartOf="@id/wx_station_freq"
            android:layout_alignParentStart="true"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <TextView android:id="@+id/wx_station_phone"
            style="@style/TextSmaller.Light"
            android:gravity="end"
            android:layout_below="@id/wx_station_freq"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/item_spacing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <TextView android:id="@+id/wx_station_info2"
            style="@style/TextSmaller.Light"
            android:layout_below="@id/wx_station_info"
            android:layout_toStartOf="@id/wx_station_phone"
            android:layout_alignParentStart="true"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="start"
            android:layout_marginEnd="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <TextView android:id="@+id/wx_station_wx"
            style="@style/TextSmaller.Light"
            android:layout_below="@id/wx_station_info2"
            android:layout_alignParentStart="true"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <TextView android:id="@+id/wx_report_age"
            style="@style/TextSmaller.Light"
            android:gravity="end"
            android:layout_below="@id/wx_station_wx"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/item_spacing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <TextView android:id="@+id/wx_station_wx2"
            style="@style/TextSmaller.Light"
            android:layout_below="@id/wx_station_wx"
            android:layout_toStartOf="@id/wx_report_age"
            android:layout_alignParentStart="true"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
</RelativeLayout>
