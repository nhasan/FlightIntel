<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scroll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout android:id="@+id/main_content"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <include layout="@layout/airport_title_layout" />
        <LinearLayout
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding_left"
                android:paddingRight="@dimen/padding_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView android:id="@+id/airport_comm_label"
                    style="@style/TextLabel"
                    android:text="@string/airport_communications"
                    android:layout_marginTop="@dimen/section_margin"
                    android:paddingBottom="@dimen/label_padding"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            <LinearLayout android:id="@+id/airport_comm_details"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_rectangle"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            <TextView android:id="@+id/atc_comm_label"
                    style="@style/TextLabel"
                    android:text="@string/atc_communications"
                    android:layout_marginTop="@dimen/section_margin"
                    android:paddingBottom="@dimen/label_padding"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            <LinearLayout android:id="@+id/atc_comm_details"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_rectangle"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            <TextView android:id="@+id/atc_hours_label"
                      style="@style/TextLabel"
                      android:text="@string/atc_hours"
                      android:layout_marginTop="@dimen/section_margin"
                      android:paddingBottom="@dimen/label_padding"
                      android:visibility="gone"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content" />
            <LinearLayout android:id="@+id/atc_hours_details"
                      android:orientation="vertical"
                      android:background="@drawable/rounded_rectangle"
                      android:visibility="gone"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content" />
            <TextView android:id="@+id/atc_phones_label"
                    style="@style/TextLabel"
                    android:text="@string/atc_phones"
                    android:layout_marginTop="@dimen/section_margin"
                    android:paddingBottom="@dimen/label_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            <LinearLayout android:id="@+id/atc_phones_details"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_rectangle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            <TextView android:id="@+id/airport_comm_remarks"
                    style="@style/TextLabel"
                    android:text="@string/remarks"
                    android:paddingBottom="@dimen/label_padding"
                    android:layout_marginTop="@dimen/section_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            <LinearLayout android:id="@+id/comm_remarks_layout"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_rectangle"
                    android:padding="@dimen/item_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView android:id="@+id/effective_date"
                style="@style/TextSmall.Light"
                android:padding="@dimen/item_padding"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
