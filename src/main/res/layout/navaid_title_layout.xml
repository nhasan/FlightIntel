<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/navaid_title_layout"
        android:background="?colorTertiary"
        android:paddingTop="@dimen/padding_top"
        android:paddingStart="@dimen/padding_left"
        android:paddingEnd="@dimen/padding_right"
        android:paddingBottom="@dimen/padding_bottom"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout android:id="@+id/header_inner1_layout"
         android:orientation="vertical"
         android:layout_weight="1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content">
        <TextView android:id="@+id/navaid_name"
                style="@style/TextTitle"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        <TextView android:id="@+id/navaid_info"
                style="@style/TextMedium"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <TextView android:id="@+id/navaid_info2"
                style="@style/TextSmall"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:paddingBottom="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <TextView android:id="@+id/expired_label"
                style="@style/TextSmall.Bold"
                android:padding="0dp"
                android:textColor="#ff0000"
                android:text="@string/download_expired"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout android:id="@+id/header_inner2_layout"
            android:orientation="vertical"
            android:layout_weight="0"
            android:paddingEnd="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView android:id="@+id/navaid_morse1"
                style="@style/TextMedium.Bold"
                android:maxHeight="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <TextView android:id="@+id/navaid_morse2"
                style="@style/TextMedium.Bold"
                android:maxHeight="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <TextView android:id="@+id/navaid_morse3"
                style="@style/TextMedium.Bold"
                android:gravity="top"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
