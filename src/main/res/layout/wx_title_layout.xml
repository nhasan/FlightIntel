<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/wx_title_layout"
        android:background="@drawable/title_background"
        android:paddingTop="@dimen/padding_top"
        android:paddingStart="@dimen/padding_left"
        android:paddingEnd="@dimen/padding_right"
        android:paddingBottom="@dimen/padding_bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView android:id="@+id/wx_station_name"
            style="@style/TextMedium.Bold"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <LinearLayout android:id="@+id/header_outer_layout"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:paddingBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout android:id="@+id/header_inner1_layout"
	            android:orientation="vertical"
	            android:layout_weight="1"
	            android:layout_width="0dip"
	            android:layout_height="wrap_content">
            <TextView android:id="@+id/wx_station_info"
                    style="@style/TextSmall.Light"
                    android:singleLine="true"
                    android:paddingTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            <TextView android:id="@+id/wx_station_info2"
                    style="@style/TextSmall.Light"
                    android:singleLine="true"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout android:id="@+id/header_inner2_layout"
                android:orientation="vertical"
                android:paddingStart="8dp"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <CheckBox android:id="@+id/airport_star"
                    android:button="@drawable/sl_favourite_24dp"
                    app:buttonTint="?android:attr/textColorPrimary"
                    android:paddingBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
