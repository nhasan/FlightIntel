<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="FlatButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextSmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="TextSmall.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSmall.Red">
        <item name="android:textColor">?attr/colorError</item>
    </style>

    <style name="TextSmall.Light">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TextSmaller" parent="TextSmall">
        <item name="android:textSize">@dimen/smaller_text_size</item>
    </style>

    <style name="TextSmaller.Light">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TextSmall.Monospace">
        <item name="android:typeface">monospace</item>
    </style>
    <style name="TextMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="TextMedium.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextMedium.White">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="TextLabel" parent="TextMedium">
    </style>

    <style name="TextTitle" parent="TextAppearance.Material3.TitleMedium">
    </style>

    <style name="TextNormal" parent="@style/TextAppearance.Material3.BodySmall" />

    <style name="TextNormal.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextClock">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">@dimen/clock_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextClock.Light" parent="@style/TextClock">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextClock.Light.Tenths" parent="@style/TextClock.Light">
        <item name="android:textSize">@dimen/clock_tenths_text_size</item>
    </style>

    <style name="DetailPanel">
        <item name="android:background">@drawable/rounded_rectangle</item>
        <item name="android:textColor">?attr/colorOnTertiary</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="colorControlNormal">?colorControlNormal</item>
    </style>
</resources>
