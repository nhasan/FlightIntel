<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_left"
        android:paddingTop="@dimen/padding_top"
        android:paddingRight="@dimen/padding_right"
        android:paddingBottom="@dimen/padding_bottom"
        style="@style/ListItemActivated"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/slidingmenu_item_height">
    <ImageView android:id="@+id/item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView android:id="@+id/item_text"
            style="@style/TextMedium.White"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/slidingmenu_padding"
            android:paddingRight="@dimen/slidingmenu_padding"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
</LinearLayout>
